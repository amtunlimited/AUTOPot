#!/bin/sh

if [ ! -d "./tmp" ]; then
	mkdir tmp
fi

sed "s/@FUNC@/`basename $1 .f`/" < src/pot.tm.in > tmp/pot.tm

case ${2} in
	"cygwin")	cflags="-mwin32 -mno-cygwin -lML32i1" ;;
	"linux")	cflags="-lML64i3 -lpthread -lrt" ;;
	"mac")	cflags="-";;
esac

sed -e "s/@ffile@/`basename $1`/" -e 's/@cflags@/'"$cflags"'/'  < src/Makefile.in > Makefile

cp $1 ./
